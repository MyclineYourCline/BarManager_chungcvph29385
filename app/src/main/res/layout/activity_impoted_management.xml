<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Impoted_management">
    <TextView
        android:id="@+id/myTextView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:text="Danh sách đồ uống"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imported_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myTextView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imported_add"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imported_totalPrice"
        android:src="@drawable/baseline_add_24"/>
    <TextView
        android:id="@+id/imported_totalPrice"
        android:background="#FB3737"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="Tong tien"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_height="45dp"/>
</RelativeLayout>