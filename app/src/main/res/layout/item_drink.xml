<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/drink_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/textSize"
            android:text="DrinkName"/>
        <TextView
            android:id="@+id/drink_item_unit"
            android:layout_below="@+id/drink_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unit"/>
        <ImageView
            android:id="@+id/drink_item_update"
            android:layout_toStartOf="@+id/drink_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/baseline_edit_note_24"/>
        <ImageView
            android:id="@+id/drink_item_delete"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_forever_24"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>